<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDEEFDE8"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="755dp"
        android:layout_height="586dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/recycleView"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_circle_24" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="211dp"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Nutrition information "
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="311dp"
        android:layout_height="44dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/poppins_bold"
        android:includeFontPadding="false"
        android:shadowColor="@color/black"
        android:text="Nutra Green"
        android:textColor="#E8FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="378dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/search_bg"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:drawablePadding="6dp"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:hint="Search"
        android:includeFontPadding="false"
        android:inputType="textPersonName"
        android:paddingLeft="3dp"
        android:textColorHighlight="#75A478"
        android:textColorHint="#1A7823"
        android:textColorLink="#519657"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <View
        android:id="@+id/view"
        style="@style/Divider"
        android:background="#EDF8EA"
        android:backgroundTint="#D2E6F4DA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="405dp"
        android:layout_height="134dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_medium"
        android:text="All Food Items"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBar" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="112dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Other Food Lists"
        android:textColor="#2D7730"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Recently Added"
        android:textColor="#2D7730"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="413dp"
        android:layout_height="114dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycleView" />

    <Button
        android:id="@+id/add_list_button"
        android:layout_width="85dp"
        android:layout_height="32dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:text="ADD "
        android:textColor="#FFFFFF"
        android:textColorHint="#4C4747"
        android:textColorLink="#FFFFFF"
        android:textSize="12sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView2"
        app:rippleColor="#FFFFFF"
        app:strokeColor="#FFFFFF" />

    <Button
        android:id="@+id/product_add_button_home"
        android:layout_width="70dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:background="#FFFFFF"
        android:drawableStart="@drawable/ic_add"
        android:text="ADD "
        android:textColor="#FFFFFF"
        android:textColorHint="#4C4747"
        android:textColorLink="#FFFFFF"
        android:textSize="12sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/delete_all_products"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:rippleColor="#FFFFFF"
        app:strokeColor="#FFFFFF" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="223dp"
        android:layout_height="109dp"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:focusable="auto"
        android:outlineProvider="none"
        app:backgroundTint="#00BDCCBD"
        app:layout_constraintEnd_toEndOf="@+id/circle2"
        app:layout_constraintTop_toTopOf="@+id/circle2" />

    <ImageButton
        android:id="@+id/delete_all_button"
        android:layout_width="57dp"
        android:layout_height="45dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#9C87BF88"
        android:outlineProvider="paddedBounds"
        app:layout_constraintBottom_toBottomOf="@+id/add_list_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/add_list_button"
        app:layout_constraintTop_toTopOf="@+id/add_list_button"
        app:rippleColor="#FFFFFF"
        app:srcCompat="@drawable/ic_baseline_delete_sweep_24" />

    <ImageButton
        android:id="@+id/delete_all_products"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#9C87BF88"
        android:outlineProvider="paddedBounds"
        app:layout_constraintBottom_toBottomOf="@+id/product_add_button_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_add_button_home"
        app:rippleColor="#FFFFFF"
        app:srcCompat="@drawable/ic_baseline_delete_sweep_24" />

    <ImageView
        android:id="@+id/circle2"
        android:layout_width="119dp"
        android:layout_height="129dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_circle_24" />

    <ImageView
        android:id="@+id/recentListStar"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/floatingActionButton3"
        app:layout_constraintTop_toBottomOf="@+id/recentListName"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/recentListName"
        android:layout_width="71dp"
        android:layout_height="0dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/floatingActionButton3"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton3" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutOfRecent"
        android:layout_width="242dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:background="#9CDAF3DB"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/recentProductName"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_bold"
            android:text="TextView"
            android:textColor="#C30A6707"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nutritionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Nutition grade:"
            android:textColor="#C30A6707"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recentProductName"
            app:layout_constraintVertical_bias="0.166" />

        <TextView
            android:id="@+id/recentProductGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="28dp"
            android:fontFamily="@font/poppins_bold"
            android:text="A"
            android:textColor="#C40A6707"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/recentProductImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/nutritionText"
            app:layout_constraintTop_toBottomOf="@+id/recentProductName"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="73dp"
            android:layout_height="72dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recentProductImage"
            app:srcCompat="@drawable/ic_baseline_circle_24" />

        <ImageView
            android:id="@+id/recentProductImage"
            android:layout_width="106dp"
            android:layout_height="72dp"

            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/recentButton"
            android:layout_width="231dp"
            android:layout_height="91dp"
            android:layout_marginStart="4dp"
            android:background="#31AFDAA7"
            android:textColorLink="#16FFFFFF"
            android:visibility="visible"
            app:iconTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>